    "customConditions": ["development"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "lib": ["es2022"],
    "module": "node16",
    "strict": true,
    "target": "es2022"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.*"]
}
